{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "dev": "export $(cat .env.dev | xargs) && npm run dev-db-up && db-migrate up -e dev && ENV=dev npm run watch",
    "test": "export $(cat .env.test | xargs) && npm run test-db-up && db-migrate up -e test && ENV=test jasmine-ts && npm run test-db-down",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess 'node ./dist/server.js'",
    "build": "npx tsc",
    "start": "npm run build && node ./dist/server.js",
    "prettier": "prettier --config .prettierrc.json 'src/**/*.ts' --write",
    "eslint": "npx eslint src/**/**.ts",
    "test-db-up": "docker-compose --env-file './.env.test' up --detach",
    "test-db-down": "docker-compose --env-file './.env.test' down",
    "dev-db-up": "docker-compose --env-file './.env.dev' up --detach",
    "dev-db-down": "docker-compose --env-file './.env.dev' down"
  },
  "pre-commit": [
    "prettier",
    "eslint",
    "test"
  ],
  "author": "Yinchi Luo",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jasmine": "^3.6.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/pg": "^8.6.3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "jasmine": "^3.6.4",
    "jasmine-spec-reporter": "^6.0.0",
    "jasmine-ts": "^0.3.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.5.4"
  }
}
